# =============================================================================
# LibreNMS Container Configuration
# =============================================================================

# PHP Settings
MEMORY_LIMIT=512M
MAX_INPUT_VARS=1000
UPLOAD_MAX_SIZE=100M
OPCACHE_MEM_SIZE=128

# Proxy Settings (para obtener IP real del cliente)
REAL_IP_FROM=0.0.0.0/0
REAL_IP_HEADER=X-Forwarded-For
LOG_IP_VAR=remote_addr

# Cache & Session (usando Redis)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=redis

# SNMP Defaults
LIBRENMS_SNMP_COMMUNITY=public

# Plugins
LIBRENMS_WEATHERMAP=false

# Logging
LOG_LEVEL=info
