# =============================================================================
# LibreNMS - Variables de Entorno Espec√≠ficas
# =============================================================================
# Este archivo se monta en los contenedores LibreNMS via env_file
# =============================================================================

# -----------------------------------------------------------------------------
# PHP
# -----------------------------------------------------------------------------
MEMORY_LIMIT=512M
MAX_INPUT_VARS=1000
UPLOAD_MAX_SIZE=100M
OPCACHE_MEM_SIZE=128

# -----------------------------------------------------------------------------
# PROXY / HEADERS
# -----------------------------------------------------------------------------
REAL_IP_FROM=0.0.0.0/0
REAL_IP_HEADER=X-Forwarded-For
LOG_IP_VAR=remote_addr

# -----------------------------------------------------------------------------
# CACHE / SESSIONS
# -----------------------------------------------------------------------------
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=redis

# -----------------------------------------------------------------------------
# SNMP
# -----------------------------------------------------------------------------
LIBRENMS_SNMP_COMMUNITY=public

# -----------------------------------------------------------------------------
# DISPATCHER (Poller)
# -----------------------------------------------------------------------------
DISPATCHER_POLLER_THREADS=16
DISPATCHER_DISCOVERY_THREADS=4
SNMP_TIMEOUT=2
SNMP_RETRIES=1

# -----------------------------------------------------------------------------
# FEATURES
# -----------------------------------------------------------------------------
LIBRENMS_WEATHERMAP=false

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
